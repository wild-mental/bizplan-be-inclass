<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 콘솔 출력 (기본 설정 유지) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%15.15t] %-40.40logger{39} : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Gemini Usage Log 전용 파일 출력 -->
    <appender name="GEMINI_USAGE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 파일 경로: logs/gemini-usage.log -->
        <file>logs/gemini-usage.log</file>
        
        <!-- 롤링 정책: 일별 + 크기 기반 롤링, 최대 30일 보관, 총 100MB 초과 시 삭제 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/gemini-usage.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        
        <encoder>
            <!-- CSV 형식으로 저장하여 분석 용이하게 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS},%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Gemini Usage Log만 파일로도 기록 -->
    <logger name="vibe.bizplan.bizplan_be_inclass.service.BusinessPlanGenerationService" level="INFO" additivity="true">
        <appender-ref ref="GEMINI_USAGE_FILE"/>
    </logger>
    
    <logger name="vibe.bizplan.bizplan_be_inclass.repository.BusinessPlanGenerationRepository" level="INFO" additivity="true">
        <appender-ref ref="GEMINI_USAGE_FILE"/>
    </logger>

    <!-- 루트 로거: 콘솔 출력 (기본) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
